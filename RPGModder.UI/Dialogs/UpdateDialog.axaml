<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="RPGModder.UI.Dialogs.UpdateDialog"
        Title="Update Available" Width="520" Height="460"
        WindowStartupLocation="CenterOwner" CanResize="False"
        Background="#1E1E1E" ExtendClientAreaToDecorationsHint="True">

    <Border BorderBrush="#444" BorderThickness="1">
        <DockPanel Margin="20">

            <!-- Header -->
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="0,0,0,12">
                <TextBlock Text="ðŸš€" FontSize="24" VerticalAlignment="Center"/>
                <StackPanel>
                    <TextBlock Text="New Version Available!" FontWeight="Bold" FontSize="16" Foreground="White"/>
                    <TextBlock Name="TxtVersion" Text="v1.1.0 is ready to download" Foreground="#AAA" FontSize="12"/>
                </StackPanel>
            </StackPanel>

            <!-- Changelog label -->
            <TextBlock DockPanel.Dock="Top" Text="Changelog:" Foreground="#888" FontSize="11"
                       Margin="0,0,0,4" FontWeight="SemiBold"/>

            <!-- Changelog body â€” takes all remaining space -->
            <Border DockPanel.Dock="Top" Background="#252526" CornerRadius="4" Padding="12"
                    Margin="0,0,0,12" MinHeight="200">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <TextBlock Name="TxtReleaseNotes" TextWrapping="Wrap" Foreground="#CCC"
                               FontFamily="Consolas" FontSize="12" LineHeight="18"/>
                </ScrollViewer>
            </Border>

            <!-- Progress + status -->
            <ProgressBar Name="PrgDownload" DockPanel.Dock="Top" Height="4" IsVisible="False" Margin="0,0,0,4"/>
            <TextBlock Name="TxtStatus" DockPanel.Dock="Top" Text="" FontSize="11"
                       Foreground="#888" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <!-- Buttons -->
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                <Button Name="BtnSkip" Content="Skip" Click="BtnSkip_Click"
                        Background="#333" Foreground="#CCC" Padding="16,6"/>
                <Button Name="BtnUpdate" Content="Update Now" Click="BtnUpdate_Click"
                        Background="#4EC9B0" Foreground="#1E1E1E" FontWeight="SemiBold" Padding="16,6"/>
            </StackPanel>

        </DockPanel>
    </Border>
</Window>
